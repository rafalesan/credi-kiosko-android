<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrediKiosko" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CrediKiosko.NoActionBar" parent="Theme.CrediKiosko">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseButton">
        <item name="android:paddingTop">@dimen/space_2x</item>
        <item name="android:paddingBottom">@dimen/space_2x</item>
    </style>

    <style name="PrimaryButton" parent="BaseButton">

    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="backgroundTint">@color/teal_200</item>
    </style>

</resources>